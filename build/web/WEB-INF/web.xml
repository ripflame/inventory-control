<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>servlets.EditProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PerformEdit</servlet-name>
        <servlet-class>servlets.PerformEdit</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>RemoveProduct</servlet-name>
        <servlet-class>servlets.RemoveProduct</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>servlets.AddProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/admin/addProduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>inventario</servlet-name>
        <servlet-class>servlets.Inventario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inventario</servlet-name>
        <url-pattern>/admin/inventario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/admin/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PerformEdit</servlet-name>
        <url-pattern>/admin/performEdit</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RemoveProduct</servlet-name>
        <url-pattern>/admin/removeProduct</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/admin/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
